@namespace CSGOSkinsWeb.Core.Web.Cases
@inherits OwningComponentBase

@if (weaponCase != null)
{
    <EditForm Model="weaponCase" OnValidSubmit="HandleValidSubmitAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <h1>Create Case</h1>

        <div class="form-group">
            <label class="text-white" for="caseid">Id</label>
            <InputNumber id="caseid" class="form-control" @bind-Value="weaponCase.Id" />
        </div>
        <div class="form-group">
            <label class="text-white" for="idstring">Id string</label>
            <InputText id="idstring" class="form-control" @bind-Value="weaponCase.Idstring" />
        </div>
        <div class="form-group">
            <label class="text-white" for="casename">Case Name</label>
            <InputText id="casename" class="form-control" @bind-Value="weaponCase.Casename" />
        </div>
        <div class="form-group">
            <label class="text-white" for="casecollection">Case Collection</label>
            <InputText id="casecollection" class="form-control" @bind-Value="weaponCase.Casecollection" />
        </div>
        <div class="form-group">
            <label class="text-white" for="introduced">Release Date</label>
            <InputDate id="introduced" class="form-control" @bind-Value="weaponCase.Introduced" />
        </div>
        <div class="form-group">
            <label class="text-white" for="caseimg">Image Source</label>
            <InputTextArea id="caseimg" class="form-control" @bind-Value="weaponCase.Imgsrc" />
        </div>
        
        <br/>
        <input class="btn btn-primary" type="submit" value="Create" />
        <input class="btn btn-secondary" type="button" value="Back" @onclick="ReturnToTablePage" />
    </EditForm>
}